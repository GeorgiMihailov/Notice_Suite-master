<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.messages">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <receiver android:name=".Receivers.SyncReceiver">
            <intent-filter>
                <action android:name="com.android.SYNCRECEIVER_ACTION"/>
            </intent-filter>
        </receiver>
        <service android:name=".Service.SyncService"/>
        <receiver android:name=".Receivers.Receiver">
            <intent-filter>
                <action android:name="com.android.RECEIVER_ACTION" />
            </intent-filter>
        </receiver>

        <service android:name=".Service.AlarmService" />

        <activity
            android:name=".MessagesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddMessageActivity" />
    </application>

</manifest>